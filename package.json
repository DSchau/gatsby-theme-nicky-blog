{
  "private": true,
  "workspaces": [
    "theme",
    "demo"
  ],
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "prettier": "^1.18.2"
  },
  "scripts": {
    "lint:theme": "eslint 'theme/**/*.js'",
    "format:demo": "prettier 'demo/**/*.{js,jsx,json,md,mdx}'",
    "info": "gatsby info --clipboard",
    "clean": "yarn workspace demo clean",
    "demo": "yarn workspace demo develop -H 0.0.0.0",
    "dev": "yarn run clean && yarn run demo"
  }
}
